<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="cadastroSemaforico.Views.Cadastro"
             >
    <StackLayout Orientation="Vertical">

        <StackLayout
            BackgroundColor="#808080"
            Margin="0, 0, 0, 10">
            <Label
                Text="Auditoria"
                FontSize="18"
                FontAttributes="Bold"
                TextColor="#FFF"
                Background="Black" 
                HorizontalTextAlignment="Center"
                VerticalTextAlignment="Center"
                TextTransform="Uppercase" />
            <Entry
                x:Name="EntryAuditoria"
                FontAttributes="Bold"
                FontSize="18"
                TextColor="#FFF"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="FillAndExpand"
                VerticalTextAlignment="Center"
                HorizontalTextAlignment="Center"
                ClearButtonVisibility="WhileEditing"
                Keyboard="Numeric"
                MaxLength="4" />
        </StackLayout>

        <ScrollView
            VerticalOptions="FillAndExpand">
            <Grid 
                RowDefinitions="90, 90, 90, 90, 90, 90, 90, 90, 90, 90, 90, 90, 90, 90, 180, 200, 90, 180"
                Margin="15">

                <!-- LINHA 1 -->
                <Grid Grid.Row="0" ColumnDefinitions="*, *" RowDefinitions="*, *">
                    <!-- RODOVIA -->
                    <Label 
                        Text="Rodovia *"
                        FontAttributes="Bold"
                        VerticalOptions="End"
                        Grid.Row="0"
                        Grid.Column="0" />
                    <Entry
                        x:Name="EntryRodovia"
                        Placeholder="Rodovia" 
                        TextTransform="Uppercase"
                        TextChanged="EntryRodovia_Changed"
                        Grid.Row="1"
                        Grid.Column="0"
                        ClearButtonVisibility="WhileEditing" />

                    <!-- DR -->
                    <Label 
                        Text="DR *"
                        FontAttributes="Bold"
                        VerticalOptions="End"
                        Grid.Row="0"
                        Grid.Column="1" />
                    <Picker
                        x:Name="PckDR"
                        Title="DR"
                        Grid.Row="1"
                        Grid.Column="1" >
                        <Picker.Items>
                            <x:String>01</x:String>
                            <x:String>02</x:String>
                            <x:String>03</x:String>
                            <x:String>04</x:String>
                            <x:String>05</x:String>
                            <x:String>06</x:String>
                            <x:String>10</x:String>
                            <x:String>13</x:String>
                        </Picker.Items>
                    </Picker>
                </Grid>

                <!-- LINHA 2 -->
                <StackLayout Grid.Row="1" Margin="0, 40, 0, 0">
                    <!-- SENTIDO -->
                    <Label
                        Text="Sentido *"
                        FontAttributes="Bold"
                        VerticalOptions="End" />
                    <Picker
                        x:Name="PckSentido"
                        Title="Sentido" >
                        <Picker.Items>
                            <x:String>Crescente</x:String>
                            <x:String>Decrescente</x:String>
                        </Picker.Items>
                    </Picker>
                </StackLayout>

                <!-- LINHA 3 -->
                <StackLayout Grid.Row="2" Margin="0, 40, 0, 0">
                    <!-- Lado da Pista -->
                    <Label
                        Text="Lado da Pista *"
                        FontAttributes="Bold"
                        VerticalOptions="End" />
                    <Picker
                        x:Name="PckLadoDaPista"
                        Title="Lado da Pista" >
                        <Picker.Items>
                            <x:String>Direito</x:String>
                            <x:String>Esquerdo</x:String>
                        </Picker.Items>
                    </Picker>
                </StackLayout>

                <!-- LINHA 4
                <BoxView 
                    Grid.Row="3" 
                    BackgroundColor="LightGray"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="EndAndExpand"
                    HeightRequest="1" /> 
                -->

                <!-- LINHA 5 -->
                <StackLayout Grid.Row="4">
                    <!-- Atendimento Norma -->
                    <Label
                        Text="Atendimento a Norma"
                        FontAttributes="Bold" />
                    <Picker
                        x:Name="PckAtendimentoNorma"
                        Title="Atendimento a Norma">
                        <Picker.Items>
                            <x:String>E1 - Conforme</x:String>
                            <x:String>E2 - Não Conforme</x:String>
                        </Picker.Items>
                    </Picker>
                </StackLayout>

                <!-- Linha 6 -->
                <StackLayout Grid.Row="5">
                    <!-- Observação Atendimento Norma -->
                    <Label
                        Text="Observação A.N."
                        FontAttributes="Bold"
                        Margin="0, 10,0,0"/>
                    <Entry
                        x:Name="EntryObsAN"
                        Placeholder="Obs. Atendimento as Normas" 
                        MaxLength="100" 
                        ClearButtonVisibility="WhileEditing" />
                </StackLayout>

                <!-- LINHA 7 -->
                <Grid Grid.Row="6" ColumnDefinitions="*, *" RowDefinitions="50, 50">
                    <!-- KM -->
                    <Label
                        Text="KM"
                        FontAttributes="Bold"
                        VerticalOptions="End"
                        Grid.Row="0"
                        Grid.Column="0" />

                    <Entry
                        x:Name="EntryKM"
                        Placeholder="KM"
                        Keyboard="Numeric"
                        TextChanged="EntryKM_Changed"
                        Grid.Row="1"
                        Grid.Column="0"
                        ClearButtonVisibility="WhileEditing" >
                        <Entry.Behaviors>
                            <mct:MaskedBehavior Mask="XXX+XXX" UnmaskedCharacter="X"/>
                        </Entry.Behaviors>
                    </Entry>


                    <!-- Destinação -->
                    <Label
                        Text="Destinação"
                        FontAttributes="Bold"
                        VerticalOptions="End"
                        Grid.Column="1"
                        Grid.Row="0" />
                    <Picker
                        x:Name="PckDestinacao"
                        Title="Destinação"
                        Grid.Row="1"
                        Grid.Column="1">
                        <Picker.Items>
                            <x:String>Veículos</x:String>
                            <x:String>Pedestres</x:String>
                            <x:String>Veículos/Pedestes</x:String>
                        </Picker.Items>
                    </Picker>
                </Grid>

                <!-- LINHA 8 -->
                <Grid Grid.Row="7" ColumnDefinitions="*,*" RowDefinitions="50, 50">
                    <!-- Tipo de Sinalização -->
                    <Label
                        Text="Tipo de Sinalização"
                        VerticalOptions="End"
                        FontAttributes="Bold"
                        Grid.Column="0"
                        Grid.Row="0" />
                    <Picker
                        x:Name="PckTipoSinalizacao"
                        Title="Tipo de Sinalização"
                        Grid.Column="0"
                        Grid.Row="1" >
                        <Picker.Items>
                            <x:String>Regulamentação</x:String>
                            <x:String>Advertência</x:String>
                        </Picker.Items>
                    </Picker>

                    <!-- Forma do Foco -->
                    <Label
                        Text="Forma do Foco"
                        VerticalOptions="End"
                        FontAttributes="Bold"
                        Grid.Column="1"
                        Grid.Row="0" />
                    <Picker
                        x:Name="PckForma"
                        Title="Forma do Foco"
                        Grid.Column="1"
                        Grid.Row="1">
                        <Picker.Items>
                            <x:String>Circular</x:String>
                            <x:String>Quadrado</x:String>
                        </Picker.Items>
                    </Picker>
                </Grid>

                <!-- LINHA 9 -->
                <StackLayout Grid.Row="8" Margin="0, 40,0, 0">
                    <!-- N° INDICAÇÕES LUMINOSAS -->
                    <Label
                        Text="N° de Indicações Luminosas"
                        FontAttributes="Bold" />
                    <Picker
                        x:Name="PckIndicacaoLuminosa"
                        Title="N° Luminosa">
                        <Picker.Items>
                            <x:String>1</x:String>
                            <x:String>2</x:String>
                            <x:String>3</x:String>
                        </Picker.Items>
                    </Picker>
                </StackLayout>

                <!-- LINHA 10 -->
                <StackLayout Grid.Row="9" Margin="0, 35, 0, 0">
                    <!-- SEQUÊNCIA LUMINOSAS -->
                    <Label
                        Text="Sequência Luminosas"
                        FontAttributes="Bold" />
                    <Picker
                        x:Name="PckSequencia"
                        Title="Sequência luminosa">
                        <Picker.Items>
                            <x:String>Vertical</x:String>
                            <x:String>Horizontal</x:String>
                        </Picker.Items>
                    </Picker>
                </StackLayout>

                <!-- LINHA 11 -->
                <StackLayout Grid.Row="10" Margin="0, 35, 0, 0">
                    <!-- ESTADO CONSERVAÇÃO -->
                    <Label
                        Text="Estado de Conservação"
                        FontAttributes="Bold" />
                    <Picker
                        x:Name="PckEstadoConservacao"
                        Title="Estado de conservação">
                        <Picker.Items>
                            <x:String>C1 - BOM ESTADO</x:String>
                            <x:String>C2 - MAU ESTADO</x:String>
                            <x:String>C3 - DANIFICADO</x:String>
                            <x:String>C4 - VANDALIZADO</x:String>
                        </Picker.Items>
                    </Picker>
                </StackLayout>

                <!-- LINHA 12 -->
                <StackLayout Grid.Row="11" Margin="0, 35, 0, 0">
                    <!-- OBSERVAÇÃO EC -->
                    <Label
                        Text="Observação E.C"
                        FontAttributes="Bold" />
                    <Entry
                        x:Name="EntryObsEC"
                        Placeholder="Obs. Estado de Conservação" 
                        MaxLength="100" 
                        ClearButtonVisibility="WhileEditing" />
                </StackLayout>

                <!-- LINHA 13 -->
                <StackLayout Grid.Row="12" Margin="0, 35, 0, 0">
                    <!-- OBSERVAÇÃO GERAL -->
                    <Label
                        Text="Observação Geral"
                        FontAttributes="Bold"
                        Margin="0, 10, 0, 0" />
                    <Entry
                        x:Name="EntryObs"
                        Placeholder="Observação" 
                        MaxLength="100" 
                        ClearButtonVisibility="WhileEditing" />
                </StackLayout>

                <!-- LINHA 14
                <BoxView 
                    Grid.Row="3" 
                    BackgroundColor="LightGray"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="EndAndExpand"
                    HeightRequest="1" /> 
                -->

                <!-- LINHA 15 -->
                <Grid 
                    BackgroundColor="#808080" 
                    Padding="15"
                    VerticalOptions="Start"
                    RowDefinitions="50, 50, 50" 
                    ColumnDefinitions="150, *" 
                    Grid.Row="14">
                    <!-- LATITUDE -->
                    <Label
                        Text="Latitude: "
                        TextColor="#FFFFFF"
                        FontAttributes="Bold"
                        FontSize="16"
                        Grid.Row="0"
                        Grid.Column="0"
                        HorizontalOptions="Center" />
                    <Entry
                        x:Name="EntryLatitude"
                        Grid.Row="0"
                        Grid.Column="1"
                        TextColor="White"
                        FontSize="16"
                        IsEnabled="False" 
                        Margin="0,0,0,10" />
                    <!-- LONGITUDE -->
                    <Label
                        Text="Longitude: "
                        TextColor="#FFFFFF"
                        FontAttributes="Bold"
                        FontSize="16"
                        Grid.Row="1"
                        Grid.Column="0"
                        HorizontalOptions="Center" />
                    <Entry
                        x:Name="EntryLongitude"
                        Grid.Row="1"
                        Grid.Column="1"
                        TextColor="White"
                        FontSize="16"
                        IsEnabled="False" 
                        Margin="0,0,0,10" />

                    <Button
                        Clicked="OnClick_To_GetCoordinates"
                        Text="Capturar Coordenada"
                        TextColor="#000000"
                        FontAttributes="Bold"
                        FontSize="18"
                        BackgroundColor="#FFFF00" 
                        Grid.Row="2"
                        Grid.ColumnSpan="2"/>
                </Grid>

                <!-- LINHA 16 -->
                <Grid
                    ColumnDefinitions="*, *, *"
                    Grid.Row="15"
                    Margin="0, 35, 0, 0" >

                    <Button
                        Clicked="OnClick_To_GetPhoto"
                        x:Name="BtnFotoPanoramica"
                        ImageSource="camera.svg"
                        ContentLayout="Bottom, -30"
                        Text="Foto 1"             
                        FontSize="14"
                        FontAttributes="Bold"
                        CornerRadius="20"
                        BackgroundColor="#808080"
                        Margin="0,0,10,0"
                        Grid.Column="0"/>
                    <Button
                        Clicked="OnClick_To_GetPhoto"
                        x:Name="BtnFotoDetalhe1"
                        Text="Foto 2" 
                        ImageSource="camera.svg"
                        ContentLayout="Bottom, -30"
                        FontSize="14"
                        FontAttributes="Bold"
                        CornerRadius="20"
                        BackgroundColor="#808080"
                        Margin="0,0,10,0"
                        Grid.Column="1"/>

                    <Button
                        Clicked="OnClick_To_GetPhoto"
                        x:Name="BtnFotoDetalhe2"
                        Text="Foto 3" 
                        ImageSource="camera.svg"
                        ContentLayout="Bottom, -30"
                        FontSize="14"
                        FontAttributes="Bold"
                        CornerRadius="20"
                        BackgroundColor="#808080"
                        Margin="0,0,10,0"
                        Grid.Column="2"/>
                </Grid>

                <!-- LINHA 17 -->
                <StackLayout 
                        Grid.Row="16"
                        Margin="0, 35, 0, 0">
                    <Label
                        Text="Código do Elemento"
                        FontAttributes="Bold" />
                    <Entry
                        FontAttributes="Bold"
                        IsEnabled="False" 
                        x:Name="EntryCodElemento" />
                </StackLayout>

                <!-- LINHA 18 -->
                <Grid
                    Margin="0, 40, 0, 0"
                    Grid.Row="17"
                    Grid.ColumnSpan="3"
                    ColumnDefinitions="*, *, *">

                    <Button
                        Clicked="OnClick_To_Save"
                        Text="Salvar"
                        ImageSource="disk.png"
                        FontAttributes="Bold"
                        Grid.Column="0"
                        BackgroundColor="#228b22"
                        Margin="0,0,10,0"
                        CornerRadius="20"/>

                    <Button
                        Clicked="OnClick_To_Clear"
                        Text="Limpar"
                        ImageSource="eraser.png"
                        FontAttributes="Bold"
                        Grid.Column="1"
                        BackgroundColor="#0000FF"
                        Margin="0,0,10,0"
                        CornerRadius="20"/>

                    <Button
                        Clicked="OnClick_To_Cancel"
                        Text="Cancelar"
                        ImageSource="cancel.png"
                        FontAttributes="Bold" 
                        Grid.Column="2"
                        BackgroundColor="#FF0000"
                        Margin="0,0,10,0"
                        CornerRadius="20"/>

                </Grid>
            </Grid>
        </ScrollView>
    </StackLayout>
</ContentPage>