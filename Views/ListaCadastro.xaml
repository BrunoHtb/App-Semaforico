<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="cadastroSemaforico.Views.ListaCadastro"
             Title="Elementos SemafÃ³rico">
    <VerticalStackLayout>
        <Frame
            BackgroundColor="{StaticResource Primary}"
            HeightRequest="160">
            <Grid
                ColumnDefinitions="*, *, *"
                RowDefinitions="*, *, *" >

                <Label  
                    x:Name="LabelTotalElementos"
                    Text="Total: "
                    FontSize="20"
                    FontAttributes="Bold"
                    HorizontalTextAlignment="Start"
                    VerticalTextAlignment="End"
                    Grid.Row="2"
                    Grid.Column="2" />

                <Button 
                    Clicked="OnButtonClicked_To_CadastroNovo"   
                    Text="+" 
                    BackgroundColor="Black"
                    FontSize="36" 
                    CornerRadius="27" 
                    WidthRequest="54" 
                    HeightRequest="54" 
                    Padding="0" 
                    Grid.Column="2"
                    Grid.RowSpan="2"/>
            </Grid>
        </Frame>

        <Grid
            ColumnDefinitions="0.3*, *, 0.3*"
            Padding="10"
            BackgroundColor="Black">
            <Label 
                Text="Rodovia"
                Grid.Column="0" 
                FontAttributes="Bold"
                HorizontalTextAlignment="Center"
                TextColor="White"
                FontSize="15" />
            <Label 
                Text="Codigo Elemento"
                Grid.Column="1"
                FontAttributes="Bold"
                HorizontalTextAlignment="Center"
                TextColor="White"
                FontSize="15"/>
            <Label 
                Text="Status"
                Grid.Column="2"
                FontAttributes="Bold"
                HorizontalTextAlignment="Center"
                TextColor="White"
                FontSize="15"/>
        </Grid>
        
        <BoxView 
            Grid.Row="1" 
            HeightRequest="1" 
            BackgroundColor="Gray"
            WidthRequest="10000"/>
        
        <ScrollView>
            <CollectionView 
                x:Name="CVListaCadastro" 
                SelectionMode="Single"
                SelectionChanged="Selection_Item_Changed">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid
                            RowDefinitions="*,2"
                            ColumnDefinitions="0.3*, *, 0.3*">
                            <Label
                                Grid.Column="0"
                                Grid.Row="0"
                                HorizontalTextAlignment="Center"
                                Margin="10, 20">
                                <Label.FormattedText>
                                    <FormattedString >
                                        <Span Text="{Binding Rodovia}" />
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                            <Label
                                Grid.Column="1"
                                Grid.Row="0"
                                HorizontalTextAlignment="Center"
                                Margin="0, 20">
                                <Label.FormattedText>
                                    <FormattedString >
                                        <Span Text="{Binding CodigoElemento}" />
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                            <Label
                                Grid.Column="2"
                                Grid.Row="0"
                                HorizontalTextAlignment="Center"
                                Margin="0, 20">
                                <Label.FormattedText>
                                    <FormattedString >
                                        <Span Text="{Binding StatusInterno}" />
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                            <BoxView 
                                Grid.Row="1" 
                                HeightRequest="1" 
                                BackgroundColor="Gray"
                                WidthRequest="10000"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>