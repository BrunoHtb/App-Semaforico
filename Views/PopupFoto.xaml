<?xml version="1.0" encoding="utf-8" ?>
<mopups:PopupPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mopups="clr-namespace:Mopups.Pages;assembly=Mopups;assembly=Mopups"
             xmlns:mopupsanim="clr-namespace:Mopups.Animations;assembly=Mopups"
             x:Class="cadastroSemaforico.Views.PopupFoto" 
             CloseWhenBackgroundIsClicked="True"
             BackgroundColor="#80000000">
    <mopups:PopupPage.Animation>
        <mopupsanim:ScaleAnimation
            DurationIn="700"
            EasingIn="BounceOut"
            PositionIn="Bottom"
            PositionOut="Center"
            ScaleIn="1"
            ScaleOut="0.7" />
    </mopups:PopupPage.Animation>
    
    <ScrollView
        HorizontalOptions="Center"
        VerticalOptions="CenterAndExpand">
        <Border
            WidthRequest="350"
            HeightRequest="350"
            Background="Black"
            HorizontalOptions="Center"
            StrokeShape="RoundRectangle 40, 40, 40, 40" >

            <VerticalStackLayout Spacing="30">
                <Label 
                    Text="Selecione imagem usando:" 
                    FontSize="20"
                    FontAttributes="Bold"
                    TextColor="White"
                    Margin="0, 10, 0, 0"
                    HorizontalTextAlignment="Center" />
                
                    <Button 
                        Clicked="OnClick_To_GetCamera"
                        Text="CÃ‚MERA"
                        x:Name="Foto"
                        ImageSource="fotografia.png"
                        BorderColor="Blue"
                        HeightRequest="100"
                        HorizontalOptions="CenterAndExpand"
                        BackgroundColor="LimeGreen"
                        TextColor="White"
                        FontSize="18"
                        FontAttributes="Bold" />

                <Button
                        Clicked="OnClick_To_GetGallery" 
                        Text="GALERIA"
                        x:Name="Galeria"
                        ImageSource="galeria.png"
                        BorderColor="Blue"
                        HeightRequest="100"
                        HorizontalOptions="CenterAndExpand"
                        BackgroundColor="LimeGreen"
                        TextColor="White"
                        FontSize="18"
                        FontAttributes="Bold" />
                        
            </VerticalStackLayout>
        </Border>
    </ScrollView>
</mopups:PopupPage>